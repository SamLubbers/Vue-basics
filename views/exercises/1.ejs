<% extend('../layout') %>

<div class="container" id="exercise">
<div class="row">
  <div class="col-12">
    <!-- 1) Fill the <p> below with your Name and Age - using Interpolation -->
     <p>name and age: {{ name }}, {{ age }} years old</p>
     <!-- 2) Output your age, multiplied by 3 -->
     <p>triple age: {{ tripleAge() }}</p>
     <!-- 3) Call a function to output a random float between 0 and 1 (Math.random()) -->
     <p v-once>random int (0-1): {{ randomFloat() }}</p>
     <!-- 4) Search any image on Google and output it here by binding the "src" attribute -->
     <div>
         <img style="width:100px;height:100px" v-bind:src="imgLink">
     </div>
     <!-- 5) Pre-Populate this input with your name (set the "value" attribute) -->
     <div>
         <input type="text" v-model="name">
     </div>
  </div>
</div>
</div>

<script type="text/javascript">
  new Vue({
    el: '#exercise',
    data:{
      name: 'Sam',
      age: 20,
      imgLink: 'https://vuejs.org/images/logo.png'
    },
    methods:{
      tripleAge: function(){
        return this.age * 3;
      },
      randomFloat: function(){
        return Math.random();
      }
    }
  });
</script>
