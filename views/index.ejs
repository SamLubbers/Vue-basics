<% extend('layout') %>

<div class="container" id="app">
  <div class="row">
    <div class="col-6">
      <h1>Vue.js basics</h1>
      <p>{{description}}</p>
    </div>
    <div class="col-6">
      <p>Update the description from this input field</p>
      <input type="text" v-model="description"></input>
    </div>
  </div>

  <script type="text/javascript">
  new Vue({
    el: '#app',
    data: {
      description: 'Learning in progress...'
    }
  });
  </script>
  </div>
